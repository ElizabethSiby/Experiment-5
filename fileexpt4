import java.io.*;
import java.util.*;
class file3
{
 public static void main(String args[])
 {
  try
  {
   FileWriter fw=new FileWriter("details.txt");
   FileReader fr=new FileReader("details.txt");      
   fw.write("Elizabeth Siby\n");
   fw.write("Address:Cherickal house Villoonni PO KTM\n");
   fw.close();
   int i;
   while((i=fr.read())!=-1)
   {
    System.out.print((char)i); 
   }
   fr.close();
  }
  catch(Exception e)
  {System.out.println("Exception occured");}
}}
